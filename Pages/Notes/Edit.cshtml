@page "{id:int?}"
@model MyScriptureJournal.Pages.Notes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ScriptureNote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScriptureNote.ID" />
            <div class="form-group">
                <label asp-for="ScriptureNote.Title" class="control-label"></label>
                <input asp-for="ScriptureNote.Title" class="form-control" />
                <span asp-validation-for="ScriptureNote.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ScriptureNote.EntryDateTime" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ScriptureNote.LastChange" value="@DateTime.Now" />
                <span asp-validation-for="ScriptureNote.LastChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Book" class="control-label"></label>
                <input asp-for="ScriptureNote.Book" class="form-control" />
                <span asp-validation-for="ScriptureNote.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Chapter" class="control-label"></label>
                <input asp-for="ScriptureNote.Chapter" class="form-control" />
                <span asp-validation-for="ScriptureNote.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Verse" class="control-label"></label>
                <input asp-for="ScriptureNote.Verse" class="form-control" />
                <span asp-validation-for="ScriptureNote.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.NoteText" class="control-label"></label>
                <input asp-for="ScriptureNote.NoteText" class="form-control" />
                <span asp-validation-for="ScriptureNote.NoteText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
